

<div class="gallery">
  <div class="btn">
    <button type="button" onclick="location.href='./gallery/new'">Upload a Photo</button>
    {{#if photo}}
    <div class="mainphoto">
      <p>Title: {{title}}</p>
      <img src='{{photo.link}}' alt='img'>
      <p>Author: {{photo.author}}</p>
      <p>Description: {{photo.description}}</p>
    </div>
    <ul class="meta">
            {{#each photo.meta}}
              <li>
                <b>{{@key}}</b> : {{ this }}
              </li>
            {{/each}}
          </ul>
    <div class="deleteBtn">
      <form action="/gallery/{{photo.id}}?_method=DELETE" method="POST">
        <input type="hidden" name="id" value={{photo.id}}>
        <button type="submit">Remove</button>
      </form>
    </div>
    <div class="editBtn">
      <form action="/gallery/{{photo.id}}/edit" method="GET">
        <input type="hidden" name="id" value={{photo.id}}>
        <button type="submit">Edit</button>
      </form>
    </div>
    {{else}}
    <p>No photos to display</p>
     {{/if}}
    {{#if photos}}
    {{#each photos}}
    <div class="photo">
      <p>Title: {{title}}</p>
      <img src='{{link}}' alt='img'>
      <p>Author: {{author.author}}</p>
      <p>Description: {{description}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>No photos to display</p>
    {{/if}}
  </div>